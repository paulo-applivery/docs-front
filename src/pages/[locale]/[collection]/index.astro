---
/**
 * Collection index page with locale support
 * URL: docs.applivery.com/{locale}/{collection}/
 *
 * Lists all documents in a collection (docs, academy, insights, device-management, etc.)
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Icon from '../../../components/Icon';
import ArchiveGrid from '../../../components/ArchiveGrid.astro';
import { getDocuments, getAllSettings, resolveMediaUrl, type Document, type HomeSettings, type LocalizedText } from '../../../lib/cms';
import {
  locales,
  localeNames,
  isValidLocale,
  defaultLocale,
  type Locale
} from '../../../lib/i18n';

// Helper to get localized text with fallback
function getLocalizedText(text: LocalizedText | undefined, locale: Locale, fallback: string = ''): string {
  if (!text) return fallback;
  return text[locale] || text.en || fallback;
}

export async function getStaticPaths() {
  // Define the allowed collections/folders
  // These match top-level folders inside content/{locale}/docs/ OR other content types
  // The actual folders in docs are: app-distribution, device-management, platform
  const collections = [
    // Actual folders in content/{locale}/docs/
    'app-distribution',
    'device-management',
    'platform',
    // Other content collections (may be separate or inside docs)
    'docs',
    'academy',
    'insights',
    'roadmap',
    'glossary',
    'answers',
    'product-updates',
    'about',
    'mdm',
    'api',
  ];

  const paths = [];

  // Generate paths for each locale + collection combination
  for (const locale of locales) {
    for (const collection of collections) {
      paths.push({
        params: { locale, collection },
        props: { locale: locale as Locale, collectionName: collection }
      });
    }
  }

  return paths;
}

interface Props {
  locale: Locale;
  collectionName: string;
}

const { locale, collectionName } = Astro.props;

// Validate locale
if (!isValidLocale(locale)) {
  return Astro.redirect(`/${defaultLocale}/${collectionName}/`, 301);
}

// Fetch documents for this collection
// Note: In the CMS, all docs have collection: "docs", and the "collection" name here
// (like device-management, platform, etc.) is actually a folder within the docs collection.
// So we fetch all docs and filter by path.
let documents: Document[] = [];
let settings = null;

try {
  const [docsResponse, settingsResponse] = await Promise.all([
    getDocuments({ collection: 'docs', locale, visible: true, limit: 2000 }),
    getAllSettings(),
  ]);
  // Filter documents where path contains the folder name
  // Path format: content/{locale}/docs/{folder}/...
  documents = docsResponse.documents.filter(doc => {
    if (!doc.path) return false;
    // Check if path contains the folder (e.g., /device-management/ or /platform/)
    return doc.path.includes(`/docs/${collectionName}/`) || doc.path.includes(`/${collectionName}/`);
  });
  settings = settingsResponse;
} catch (error) {
  console.warn(`Failed to fetch ${collectionName} documents:`, error);
}

// Get home settings for header/footer
const homeSettings = settings?.home;

// Detect available locales from home settings translations
function getAvailableLocalesFromSettings(home: HomeSettings | null | undefined): Locale[] {
  if (!home) return [defaultLocale];

  const foundLocales = new Set<string>();

  const checkLocalizedText = (text: LocalizedText | undefined) => {
    if (!text) return;
    for (const [key, value] of Object.entries(text)) {
      if (value && typeof value === 'string' && value.trim() !== '') {
        foundLocales.add(key);
      }
    }
  };

  checkLocalizedText(home.hero?.title);
  checkLocalizedText(home.hero?.highlightedWord);
  checkLocalizedText(home.hero?.subtitle);
  checkLocalizedText(home.hero?.searchPlaceholder);
  checkLocalizedText(home.hero?.ctaButton?.label);
  home.headerNav?.forEach(item => checkLocalizedText(item.label));
  home.quickLinks?.forEach(link => checkLocalizedText(link.label));
  checkLocalizedText(home.featuredArticles?.title);
  checkLocalizedText(home.footer?.tagline);

  const availableLocales = locales.filter(l => foundLocales.has(l));
  return availableLocales.length > 0 ? availableLocales : [defaultLocale];
}

const availableLocales = getAvailableLocalesFromSettings(homeSettings);

// Header navigation from CMS
const headerNavItems = homeSettings?.headerNav || [];

// Footer content from CMS
const footerTagline = getLocalizedText(homeSettings?.footer?.tagline, locale, 'Built with DocForge and Astro');
const socialLinks = homeSettings?.footer?.socialLinks || [];

// CTA button from home settings
const ctaLabel = getLocalizedText(homeSettings?.hero?.ctaButton?.label, locale, 'Get started');
const ctaHref = homeSettings?.hero?.ctaButton?.href || '/docs';

