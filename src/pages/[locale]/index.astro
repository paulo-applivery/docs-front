---
/**
 * Locale homepage - Documentation landing page
 * docs.applivery.com/{locale}/
 *
 * Displays featured docs, collections, and quick links for the given locale
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon';
import AIPoweredSearch from '../../components/AIPoweredSearch.astro';
import type { IconName } from '../../lib/icons';
import { getCollection } from 'astro:content';
import { getDocuments, getAllSettings, getNavigationSettings, resolveMediaUrl, type Document, type HomeSettings, type LocalizedText, type NavigationSettings } from '../../lib/cms';
import { readdir } from 'node:fs/promises';
import { fileURLToPath } from 'node:url';
import {
  locales,
  localeNames,
  isValidLocale,
  defaultLocale,
  type Locale
} from '../../lib/i18n';

// Helper to get localized text with fallback
function getLocalizedText(text: LocalizedText | undefined, locale: Locale, fallback: string = ''): string {
  if (!text) return fallback;
  return text[locale] || text.en || fallback;
}

export async function getStaticPaths() {
  // Collect active locales from CMS content + filesystem
  const activeLocales = new Set<Locale>([defaultLocale]);

  // Check filesystem (legacy content folders)
  const contentDir = fileURLToPath(new URL('../../content', import.meta.url));
  try {
    const entries = await readdir(contentDir, { withFileTypes: true });
    for (const entry of entries) {
      if (entry.isDirectory() && isValidLocale(entry.name)) {
        activeLocales.add(entry.name as Locale);
      }
    }
  } catch { /* ignore */ }

  // Also check CMS documents for locales
  try {
    const allDocs = await getCollection('docs');
    for (const entry of allDocs) {
      const loc = entry.data.locale;
      if (loc && isValidLocale(loc)) activeLocales.add(loc as Locale);
    }
  } catch { /* ignore */ }

  // Always include 'es' if we have any content
  if (activeLocales.has('en')) activeLocales.add('es');

  return [...activeLocales].map(locale => ({
    params: { locale },
    props: { locale }
  }));
}

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

// Validate locale
if (!isValidLocale(locale)) {
  return Astro.redirect(`/${defaultLocale}/`, 301);
}

// Fetch data from CMS — fall back to English if no docs for this locale
let documents: Document[] = [];
let settings: Awaited<ReturnType<typeof getAllSettings>> | null = null;

try {
  const [docsResponse, settingsResponse, navResponse] = await Promise.all([
    getDocuments({ visible: true, limit: 2000, locale }),
    getAllSettings(),
    getNavigationSettings(locale),
  ]);
  documents = docsResponse.documents;
  settings = settingsResponse;
  if (navResponse) settings = { ...settings, navigation: navResponse } as typeof settings;

  // Fallback: if this locale has no docs, use English
  if (documents.length === 0 && locale !== defaultLocale) {
    const fallback = await getDocuments({ visible: true, limit: 2000, locale: defaultLocale });
    documents = fallback.documents;
  }
} catch (error) {
  console.warn('Failed to fetch CMS data:', error);
}

// Get home settings
const homeSettings = settings?.home;

// Extract icon mapping from sideMenu settings
const navigation = settings?.navigation as NavigationSettings | undefined;
const sideMenu = navigation?.sideMenu;
const collectionIcons: Record<string, string> = {};
if (sideMenu?.items) {
  sideMenu.items.forEach((item) => {
    if (item.collection && item.icon) {
      collectionIcons[item.collection] = item.icon;
    }
  });
}

// Detect available locales from home settings translations
// Only show languages that have actual content in the CMS
function getAvailableLocalesFromSettings(home: HomeSettings | null | undefined): Locale[] {
  if (!home) return [defaultLocale];

  const foundLocales = new Set<string>();

  // Check all LocalizedText fields for available translations
  const checkLocalizedText = (text: LocalizedText | undefined) => {
    if (!text) return;
    for (const [key, value] of Object.entries(text)) {
      if (value && typeof value === 'string' && value.trim() !== '') {
        foundLocales.add(key);
      }
    }
  };

  // Check hero section
  checkLocalizedText(home.hero?.title);
  checkLocalizedText(home.hero?.highlightedWord);
  checkLocalizedText(home.hero?.subtitle);
  checkLocalizedText(home.hero?.searchPlaceholder);
  checkLocalizedText(home.hero?.ctaButton?.label);

  // Check header nav items
  home.headerNav?.forEach(item => checkLocalizedText(item.label));

  // Check quick links
  home.quickLinks?.forEach(link => checkLocalizedText(link.label));

  // Check featured articles title
  checkLocalizedText(home.featuredArticles?.title);

  // Check footer
  checkLocalizedText(home.footer?.tagline);

  // Filter to only valid locales and ensure at least default locale
  const availableLocales = locales.filter(l => foundLocales.has(l));
  return availableLocales.length > 0 ? availableLocales : [defaultLocale];
}

const availableLocales = getAvailableLocalesFromSettings(homeSettings);

// Get last updated docs — always sorted by most recent update
const maxFeatured = homeSettings?.featuredArticles?.maxItems || 6;
const recentlyUpdatedDocs = documents
  .filter(doc => doc.title && doc.collection !== 'api' && doc.type !== 'archive')
  .sort((a, b) => {
    const dateA = a.updated_date || a.updated_at || a.pub_date || a.created_at || '';
    const dateB = b.updated_date || b.updated_at || b.pub_date || b.created_at || '';
    return String(dateB).localeCompare(String(dateA));
  })
  .slice(0, maxFeatured);
const showFeatured = homeSettings?.featuredArticles?.enabled !== false;

// Hero content from CMS with fallbacks
const heroTitle = getLocalizedText(homeSettings?.hero?.title, locale, 'Build better with our');
const heroHighlight = getLocalizedText(homeSettings?.hero?.highlightedWord, locale, 'documentation');
const heroSubtitle = getLocalizedText(homeSettings?.hero?.subtitle, locale, 'Comprehensive guides, API references, and tutorials to help you get the most out of our platform.');
const searchPlaceholder = getLocalizedText(homeSettings?.hero?.searchPlaceholder, locale, 'Search documentation...');
const ctaLabel = getLocalizedText(homeSettings?.hero?.ctaButton?.label, locale, 'Get started');
const ctaHref = homeSettings?.hero?.ctaButton?.href || '/get-started';

// Header navigation from CMS
const headerNavItems = homeSettings?.headerNav || [];

// Quick links from CMS
const quickLinksItems = homeSettings?.quickLinks || [];

// Featured articles title
const featuredTitle = 'Recently updated';

// Footer content from CMS
const footerTagline = getLocalizedText(homeSettings?.footer?.tagline, locale, 'Built with DocForge and Astro');
const socialLinks = homeSettings?.footer?.socialLinks || [];

// Social link icons
const socialIcons: Record<string, string> = {
