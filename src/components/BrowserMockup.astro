---
/**
 * BrowserMockup - Chrome-like browser frame wrapper for images
 *
 * Usage:
 *   <BrowserMockup url="https://example.com" theme="light">
 *     <img src="/screenshot.png" alt="App screenshot" />
 *   </BrowserMockup>
 *
 * Props:
 *   - url: Display URL in address bar (optional, default: "https://example.com")
 *   - theme: "light" | "dark" | "auto" (optional, default: "auto")
 *       auto = follows system/site dark mode
 *   - padding: Whether to add padding inside the content area (optional, default: false)
 */
import Icon from './Icon';

interface Props {
  url?: string;
  theme?: 'light' | 'dark' | 'auto';
  padding?: boolean;
}

const { url = 'https://example.com', theme = 'auto', padding = false } = Astro.props;

const themeClass = theme === 'auto' ? 'browser-mockup-auto' : theme === 'dark' ? 'browser-mockup-dark' : 'browser-mockup-light';
---

<div class={`browser-mockup ${themeClass}`}>
  <!-- Title bar with traffic lights and tabs -->
  <div class="browser-titlebar">
    <div class="browser-traffic-lights">
      <span class="dot dot-close"></span>
      <span class="dot dot-minimize"></span>
      <span class="dot dot-maximize"></span>
    </div>
    <div class="browser-tab">
      <span class="browser-tab-title">{url.replace(/^https?:\/\//, '').split('/')[0]}</span>
    </div>
    <div class="browser-tab-spacer"></div>
  </div>

  <!-- Address bar -->
  <div class="browser-toolbar">
    <div class="browser-nav-buttons">
      <Icon name="arrowLeft" className="nav-icon" aria-hidden={true} client:only="react" />
      <Icon name="arrowRight" className="nav-icon disabled" aria-hidden={true} client:only="react" />
      <Icon name="refresh" className="nav-icon" aria-hidden={true} client:only="react" />
    </div>
    <div class="browser-address-bar">
      <Icon name="lock" className="lock-icon" aria-hidden={true} client:only="react" />
      <span class="browser-url">{url}</span>
    </div>
  </div>

  <!-- Content area -->
  <div class={`browser-content ${padding ? 'browser-content-padded' : ''}`}>
    <slot />
  </div>
</div>

<style>
  .browser-mockup {
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    border: 1px solid;
    width: 100%;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  }

  /* Light theme */
  .browser-mockup-light {
    border-color: #e2e8f0;
    background: #ffffff;
  }

  .browser-mockup-light .browser-titlebar {
    background: #f1f5f9;
    border-bottom: 1px solid #e2e8f0;
  }

  .browser-mockup-light .browser-tab {
    background: #ffffff;
    border-color: #e2e8f0;
    color: #334155;
  }

  .browser-mockup-light .browser-toolbar {
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
  }

  .browser-mockup-light .browser-address-bar {
    background: #f1f5f9;
    border-color: #e2e8f0;
    color: #475569;
  }

  .browser-mockup-light .nav-icon {
    color: #64748b;
  }

  .browser-mockup-light .lock-icon {
    color: #64748b;
  }

  .browser-mockup-light .browser-content {
    background: #ffffff;
  }

  /* Dark theme */
  .browser-mockup-dark {
    border-color: #2d3748;
    background: #1a202c;
  }

  .browser-mockup-dark .browser-titlebar {
    background: #1e2433;
    border-bottom: 1px solid #2d3748;
  }

  .browser-mockup-dark .browser-tab {
    background: #283040;
    border-color: #2d3748;
    color: #cbd5e1;
  }

  .browser-mockup-dark .browser-toolbar {
    background: #1a2030;
    border-bottom: 1px solid #2d3748;
  }

  .browser-mockup-dark .browser-address-bar {
    background: #283040;
    border-color: #374151;
    color: #94a3b8;
  }

  .browser-mockup-dark .nav-icon {
    color: #64748b;
  }

  .browser-mockup-dark .lock-icon {
    color: #64748b;
  }

  .browser-mockup-dark .browser-content {
    background: #1a202c;
  }

  /* Auto theme - follows site dark mode */
  .browser-mockup-auto {
    border-color: #e2e8f0;
    background: #ffffff;
  }

  .browser-mockup-auto .browser-titlebar {
    background: #f1f5f9;
    border-bottom: 1px solid #e2e8f0;
  }

  .browser-mockup-auto .browser-tab {
    background: #ffffff;
    border-color: #e2e8f0;
    color: #334155;
  }

  .browser-mockup-auto .browser-toolbar {
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
  }

  .browser-mockup-auto .browser-address-bar {
    background: #f1f5f9;
    border-color: #e2e8f0;
    color: #475569;
  }

  .browser-mockup-auto .nav-icon {
    color: #64748b;
  }

  .browser-mockup-auto .lock-icon {
    color: #64748b;
  }

  .browser-mockup-auto .browser-content {
    background: #ffffff;
  }

  :global(.dark) .browser-mockup-auto {
    border-color: #2d3748;
    background: #1a202c;
  }

  :global(.dark) .browser-mockup-auto .browser-titlebar {
    background: #1e2433;
    border-bottom-color: #2d3748;
  }

  :global(.dark) .browser-mockup-auto .browser-tab {
    background: #283040;
    border-color: #2d3748;
    color: #cbd5e1;
  }

  :global(.dark) .browser-mockup-auto .browser-toolbar {
    background: #1a2030;
    border-bottom-color: #2d3748;
  }

  :global(.dark) .browser-mockup-auto .browser-address-bar {
    background: #283040;
    border-color: #374151;
    color: #94a3b8;
  }

  :global(.dark) .browser-mockup-auto .nav-icon {
    color: #64748b;
  }

  :global(.dark) .browser-mockup-auto .lock-icon {
    color: #64748b;
  }

  :global(.dark) .browser-mockup-auto .browser-content {
    background: #1a202c;
  }

  /* Title bar */
  .browser-titlebar {
    display: flex;
    align-items: center;
    padding: 0.5rem 0.75rem;
    gap: 0.75rem;
    min-height: 2.25rem;
  }

  .browser-traffic-lights {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
  }

  .dot-close {
    background: #ff5f57;
  }

  .dot-minimize {
    background: #ffbd2e;
  }

  .dot-maximize {
    background: #28c840;
  }

  .browser-tab {
    display: flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 0.375rem 0.375rem 0 0;
    border: 1px solid;
    border-bottom: none;
    font-size: 0.75rem;
    font-weight: 500;
    max-width: 12rem;
    margin-bottom: -0.5rem;
    padding-bottom: 0.5rem;
  }

  .browser-tab-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .browser-tab-spacer {
    flex: 1;
  }

  /* Toolbar */
  .browser-toolbar {
    display: flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    gap: 0.5rem;
  }

  .browser-nav-buttons {
    display: flex;
    align-items: center;
    gap: 0.125rem;
    flex-shrink: 0;
  }

  .nav-icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  .nav-icon.disabled {
    opacity: 0.3;
  }

  .browser-address-bar {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.3rem 0.625rem;
    border-radius: 9999px;
    border: 1px solid;
    font-size: 0.75rem;
    min-width: 0;
  }

  .lock-icon {
    width: 0.75rem;
    height: 0.75rem;
    flex-shrink: 0;
  }

  .browser-url {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Content */
  .browser-content {
    width: 100%;
    overflow: hidden;
  }

  .browser-content-padded {
    padding: 1rem;
  }

  .browser-content :global(img) {
    display: block;
    width: 100%;
    height: auto;
  }

  /* Responsive - smaller on mobile */
  @media (max-width: 640px) {
    .browser-titlebar {
      padding: 0.375rem 0.5rem;
    }

    .browser-traffic-lights {
      gap: 0.375rem;
    }

    .dot {
      width: 0.625rem;
      height: 0.625rem;
    }

    .browser-tab {
      font-size: 0.625rem;
      padding: 0.2rem 0.5rem;
    }

    .browser-toolbar {
      padding: 0.25rem 0.5rem;
    }

    .browser-address-bar {
      font-size: 0.625rem;
      padding: 0.2rem 0.5rem;
    }

    .nav-icon {
      width: 0.875rem;
      height: 0.875rem;
    }
  }
</style>
