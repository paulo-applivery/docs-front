    color: var(--color-text-secondary);
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    cursor: pointer;
    text-align: left;
    transition: all 0.15s ease;
  }

  .ai-suggestion:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
    background: var(--color-background-tertiary);
  }

  /* Message row layout — :global because elements are created dynamically */
  :global(.ai-message) {
    display: flex;
    flex-direction: column;
  }

  :global(.ai-message-user) {
    align-items: flex-end;
  }

  :global(.ai-message-assistant) {
    align-items: flex-start;
  }

  /* Base content */
  :global(.ai-message-content) {
    font-size: 0.8125rem;
    line-height: 1.6;
    max-width: 85%;
  }

  /* User bubble */
  :global(.ai-message-user .ai-message-content) {
    background: var(--color-primary);
    color: white;
    padding: 0.625rem 0.875rem;
    border-radius: 1.125rem 1.125rem 0.25rem 1.125rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.06);
  }

